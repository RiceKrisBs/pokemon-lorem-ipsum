{
  "name": "pokemon-lorem-ipsum",
  "displayName": "Pokemon Lorem Ipsum",
  "description": "Generate Pokemon-themed lorem ipsum text for your projects",
  "version": "0.0.1",
  "publisher": "RiceKrisBs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RiceKrisBs/pokemon-lorem-ipsum"
  },
  "engines": {
    "vscode": "^1.75.0",
    "node": ">=24.1.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pokemon-lorem-ipsum.generateSentence",
        "title": "Pokemon Lorem Ipsum: Generate Sentence"
      },
      {
        "command": "pokemon-lorem-ipsum.generateParagraph",
        "title": "Pokemon Lorem Ipsum: Generate Paragraph"
      },
      {
        "command": "pokemon-lorem-ipsum.generateMultiParagraph",
        "title": "Pokemon Lorem Ipsum: Generate Multiple Paragraphs"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-plugin-perfectionist": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^20.0.0",
    "typescript": "^5.8.3"
  }
}
